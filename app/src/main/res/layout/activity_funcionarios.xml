<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Barra de título -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ff6400"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione um Agente de Operação"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_police"
            android:drawablePadding="8dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvFuncionarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice"
        android:background="@android:color/white"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/txtFuncionariosSelecionados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nenhum agente selecionado"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#333333"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnConfirmarEntrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Entrega"
        android:textAllCaps="false"
        android:backgroundTint="#ff6400"
        android:textColor="@android:color/white"
        android:padding="14dp"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_entrega"
        android:background="@drawable/btn_rounded"/>

    <Button
        android:id="@+id/btnConfirmarDevolucao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Devolução"
        android:textAllCaps="false"
        android:backgroundTint="#ff6400"
        android:textColor="@android:color/white"
        android:padding="14dp"
        android:background="@drawable/btn_rounded"
        android:drawableStart="@drawable/ic_retirada"/>
</LinearLayout>
